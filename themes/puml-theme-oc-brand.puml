<style>
wbsDiagram {
  // all lines (meaning connector and borders, there are no other lines in WBS) are black by default
  Linecolor $ANTHRACITE
  arrow {
    LineColor $ANTHRACITE
    :depth(2) {
      LineColor blue
      LineStyle 4
      LineThickness .5
    }
  }
  node {
    BackgroundColor $BLUE
    FontColor $WHITE
	:depth(0) {
		BackgroundColor $DARKBLUE
		RoundCorner 10
	}
    ' :depth(2) {
    '  LineStyle 2
    '  LineThickness 2
    '}
  }
  boxless {
    // will target boxless node with '_'
    FontColor $ANTHRACITE
  }  
}
</style>

